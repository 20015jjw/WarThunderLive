<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_author_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/fragment_postcard">

    <ImageView
        android:id="@+id/post_author_header_avatar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp" />


    <LinearLayout
        android:id="@+id/post_author_header_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_author_header_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_author_header_info_nickname"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textStyle="bold"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/post_author_header_info_timestamp"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textStyle="italic"
            android:layout_weight="1">
        </TextView>


    </LinearLayout>

</RelativeLayout>